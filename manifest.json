{
  "manifest_version": 3,
  "name": "Bynder Filter URL Generator",
  "version": "1.0.0",
  "description": "Generate shareable URLs from applied Bynder filters using network interception",

  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],

  "host_permissions": [
    "*://*.bynder.com/*"
  ],

  "icons": {
    "16": "icons/funnel-16.svg",
    "32": "icons/funnel-32.svg",
    "48": "icons/funnel-48.svg",
    "128": "icons/funnel-128.svg"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Generate Bynder Filter URL",
    "default_icon": {
      "16": "icons/funnel-16.svg",
      "32": "icons/funnel-32.svg",
      "48": "icons/funnel-48.svg",
      "128": "icons/funnel-128.svg"
    }
  },

  "background": {
    "service_worker": "background.js"
  }
}